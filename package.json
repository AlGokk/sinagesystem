    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",

{
  "name": "ui",
  "version": "1.0.0",
  "description": "ui f√ºr mein Fullstack Projekt mit React und TypeScript",
  "main": "src/index.tsx",
  "privagte": true,
  "scripts": {

    "clean": "rimraf build",

    "build:backend": "npm run clean && npm run build --workspace=backend",
    "build:ui": "npm run build --workspace=ui",


    "build": "npm run build:backend && npm run build:ui",

    "start:backend": "npm run start --workspace=backend",
    "start:ui": "npm run start --workspace=ui",
    "start": "concurrently \"npm run start:backend\" \"npm run start:ui\"",

    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run start --workspace=ui\""
  },
  "keywords": [
    "react",
    "typescript",
    "ui"
  ],
